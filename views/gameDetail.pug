extends layout

block content
  include nav.pug
  h1 #{title}  
  h3 by #{creator}
  p description : #{description}

  ul
  each game in info
    li
      h1 #{game.name}
      each genre in game.genre
        span(class="badge badge-primary badge-pill float-right ml-3") #{genre}
      p 
      img(src=game.image)
      p #{game.short_description}
      if game.isFree
        p Free Game
      else
        if game.discount === 0
          p #{game.price}
        else
          p #{game.price} - On Sale : #{game.discount}%
      p #{game.creatorPlaytime} hours played by author.
  else
    li "No Game Lists"

  a(href="/userPage/") Back to profile