extends layout

block content
  h1 "Gamelist Details"
  h2 "Crerator : " + #{creator}
  ul
  each game in games
    li
      h1 #{game.name}
      img(src=game.image)
      p #{game.short_description}
      p #{game.price_original} -> #{game.price_discounted}
  else
    li "No Game Lists"

  a(href="/userPage/") Back to profile